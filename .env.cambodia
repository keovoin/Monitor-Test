# Cambodia Monitor Configuration
# Copy this to .env.local and customize as needed

# ============================================
# VARIANT CONFIGURATION
# ============================================

# Set to 'cambodia' for Cambodia-focused monitoring
VITE_VARIANT=cambodia

# Map interaction mode: '3d' or 'flat'
VITE_MAP_INTERACTION_MODE=3d

# Default map view (Cambodia)
VITE_DEFAULT_LAT=12.5657
VITE_DEFAULT_LON=104.991
VITE_DEFAULT_ZOOM=7

# Regional bounds for filtering
VITE_REGION_NORTH=23.0
VITE_REGION_SOUTH=8.0
VITE_REGION_EAST=110.0
VITE_REGION_WEST=97.0

# ============================================
# FEATURE FLAGS
# ============================================

# Enable Cambodia-specific filtering
VITE_ENABLE_CAMBODIA_FILTER=true

# Enable regional focus (ASEAN + neighbors)
VITE_ENABLE_REGIONAL_FOCUS=true

# Minimum relevance score for news (0-100)
VITE_MIN_RELEVANCE_SCORE=25

# Show only Cambodia and neighboring countries
VITE_SHOW_ONLY_REGION=true

# ============================================
# API KEYS (Same as original .env.example)
# ============================================

# AI Services
GROQ_API_KEY=your_groq_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Redis Cache
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Market Data
FINNHUB_API_KEY=your_finnhub_api_key_here
FRED_API_KEY=your_fred_api_key_here
EIA_API_KEY=your_eia_api_key_here

# Tracking Services
WINGBITS_API_KEY=your_wingbits_api_key_here
AISSTREAM_API_KEY=your_aisstream_api_key_here

# Geopolitical Data
ACLED_ACCESS_TOKEN=your_acled_token_here
CLOUDFLARE_API_TOKEN=your_cloudflare_token_here
NASA_FIRMS_API_KEY=your_nasa_firms_key_here

# Relay Server
WS_RELAY_URL=your_relay_server_url_here
VITE_WS_RELAY_URL=wss://your_relay_server_url_here

# OpenSky Network
OPENSKY_CLIENT_ID=your_opensky_client_id_here
OPENSKY_CLIENT_SECRET=your_opensky_client_secret_here

# ============================================
# CAMBODIA-SPECIFIC FEATURES
# ============================================

# Priority countries (comma-separated)
VITE_MONITORED_COUNTRIES=Cambodia,Thailand,Vietnam,Laos,Myanmar,China,Malaysia,Singapore

# Custom RSS feeds (add Cambodia-specific sources)
VITE_CUSTOM_FEEDS_ENABLED=true

# Border monitoring
VITE_ENABLE_BORDER_MONITORING=true

# Economic corridor tracking
VITE_ENABLE_CORRIDOR_TRACKING=true

# ============================================
# PANEL CONFIGURATION
# ============================================

# Enabled panels
VITE_ENABLED_PANELS=cambodia-news,regional-news,border-monitor,economic-updates,infrastructure,map

# Disabled panels (global content not relevant to Cambodia)
VITE_DISABLED_PANELS=global-conflicts,nato-tracker,middle-east

# ============================================
# REFRESH INTERVALS (milliseconds)
# ============================================

VITE_NEWS_REFRESH_INTERVAL=300000
VITE_MAP_REFRESH_INTERVAL=60000
VITE_BORDER_REFRESH_INTERVAL=180000
